<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SubFragment2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/subfragment2"
        android:gravity="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@id/imv_goodnight031"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:id="@+id/imv_goodnight031"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:contentDescription="@string/subfragment2image"
        android:src="@drawable/goodnight031"
        android:layout_margin="10dp"
        android:scaleType="fitStart"
        app:layout_constraintHeight_percent="0.28"
        app:layout_constraintBottom_toTopOf="@id/imv_goodnight032"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageView
        android:id="@+id/imv_goodnight032"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:contentDescription="@string/subfragment2image"
        android:src="@drawable/goodnight032"
        android:layout_margin="10dp"
        android:scaleType="fitEnd"
        app:layout_constraintHeight_percent="0.28"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:id="@+id/imv_ok033"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:contentDescription="@string/subfragment2image"
        android:src="@drawable/ok033"
        android:layout_margin="10dp"
        android:scaleType="fitStart"
        app:layout_constraintHeight_percent="0.28"
        app:layout_constraintTop_toBottomOf="@id/imv_goodnight032"
        app:layout_constraintLeft_toLeftOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>